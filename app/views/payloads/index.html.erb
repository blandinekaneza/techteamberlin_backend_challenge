<p id="notice"><%= notice %></p>

<h1>Payloads</h1>

<table>
  <thead>
    <tr>
      <th>Payload</th>
      <th>Reused</th>
      <th>Manufacturer</th>
      <th>Payload type</th>
      <th>Payload mass kg</th>
      <th>Payload mass lbs</th>
      <th>Orbit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payloads.each do |payload| %>
      <tr>
        <td><%= payload.payload_id %></td>
        <td><%= payload.reused %></td>
        <td><%= payload.manufacturer %></td>
        <td><%= payload.payload_type %></td>
        <td><%= payload.payload_mass_kg %></td>
        <td><%= payload.payload_mass_lbs %></td>
        <td><%= payload.orbit %></td>
        <td><%= link_to 'Show', payload %></td>
        <td><%= link_to 'Edit', edit_payload_path(payload) %></td>
        <td><%= link_to 'Destroy', payload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

